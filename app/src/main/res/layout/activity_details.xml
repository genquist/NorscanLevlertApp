<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.norscan.levlertapp.detailsActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/server"
        android:id="@+id/deviceImg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/deviceName"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/deviceImg"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/deviceImg"
        android:layout_below="@+id/deviceName"/>

    <TextView
        android:text="Zone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/zone1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/deviceImg"/>

    <TextView
        android:text="Zone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/zone2"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/zone1"/>

    <TextView
        android:text="Zone3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/zone3"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/zone2"/>

    <TextView
        android:text="Zone4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/zone4"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/zone3"/>

    <TextView
        android:text="Zone5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/zone5"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/zone4"/>

    <TextView
        android:text="Zone6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/zone6"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/zone5"/>

    <TextView
        android:text="Low Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/lowTemp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/zone6"/>

    <TextView
        android:text="Low Battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/lowBat"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lowTemp"/>

</RelativeLayout>
